<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
      <record model="ir.ui.view" id="twilio_conf_form_view">
          <field name="name">esms conf form view</field>
          <field name="model">esms.accounts</field>
          <field name="inherit_id" ref="entity_sms.esms_conf_form_view"/>
          <field name="arch" type="xml">
      	      <xpath expr="//h2[@string='Gateway Hook']" position="after">
      	          <div attrs="{'invisible': [('gateway_model', '!=', 'esms.twilio')]}">
		      <group>
	                  <field name="twilio_account_sid"/>
                          <field name="twilio_auth_token"/>
                      </group>
    	          </div>
      	      </xpath>
      	  </field>
      </record>
  </data>
</openerp>