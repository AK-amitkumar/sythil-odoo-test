<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="my_dating_list" name="Browse Dating Profiles" page="True">
    <t t-call="website.layout">
        <div class="container">

            <div class="mt16 mb16">
                <h1 class="text-center">My Dating List</h1>
                <form method="GET" action="">
                Min Age: <input type="text" name="min_age"/>
                Max Age: <input type="text" name="max_age"/>
                Dist (km): <input type="text" name="dist"/>
                Gender: <select type="text" name="gender">
                    <option value="">Any</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <input type="submit" value="Search"/>
                </form>
            </div>
                  
            <t t-if="my_dates_count > 0"> 
                    <t t-foreach="my_dates" t-as="my_date">
                        <div class="col-md-4 mt16 mb16">
                            <a t-attf-href="/dating/profiles/#{my_date.id}"><img t-att-src="website.image_url(my_date, 'image')" class="img-rounded" t-attf-alt="#{my_date.firstname} dating profile" width="200" height="200"/><br/><t t-esc="my_date.firstname"/> (<t t-esc="my_date.age"/> <t t-esc="my_date.gender.letter"/>)<br/><t t-esc="my_date.location_string"/></a>			                        
			</div>
                    </t>
            </t>
            <t t-if="my_dates_count == 0">
                    <div class="mt16 mb16">
		        <h2 class="text-center">No one matches that critera</h2>
                    </div>
            </t>
            
        </div>
        
    </t>
</template>



<template id="my_dating_profile" name="Dating Profile" page="True">
    <t t-call="website.layout">
        <div class="container mt16 mb16">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                            
                <div id="main" class="well">
                    <div id="main-header">
                        <div id="top-right-buttons" style="float:right;">
                            <t t-if="you_like == True and they_like == True">
			        <input type="submit" alt="Message Member" value="Message"/>
			    </t>
                            <t t-if="request.env.user.partner_id.name != 'Public user'">
           	                <form action="/dating/profiles/like" method="POST">   
	                            <input type="hidden" name="member_id" t-attf-value="#{my_date.id}"/>
	                            <input type="submit" alt="If they like you back you can talk to them" value="Like"/>
                                </form>
                            </t>
                        </div>
                        <img t-att-src="website.image_url(my_date, 'image')" class="img-rounded" style="float:left;margin-right:16px;margin-bottom:16px;"  t-attf-alt="#{my_date.firstname} dating profile" width="200" height="200"/>
                        Age: <t t-esc="my_date.age"/><br/>
			<br/>
			Location: <t t-esc="my_date.location_string"/><br/>

                    </div>
                    
                    <div id="profile_text" style="clear:both;">
                        <h1><t t-esc="my_date.firstname"/></h1>
                        <t t-esc="my_date.profile_text"/>
                    

                        <form method="POST" action="/dating/profile/update">
	                    <input type="hidden" name="member_id" t-attf-value="#{my_date.id}"/>
                            Profile Visibility (<t t-esc="my_date.profile_visibility"/>)<br/>
                            <input type="radio" name="profile_visibility" value="public"/> Public<br/>
                            <input type="radio" name="profile_visibility" value="members_only"/> Members Only<br/>
                            <input type="radio" name="profile_visibility" value="not_listed"/> Private<br/>
                            <input type="submit" value="Update Visibility"/>
                        </form>
            
                        
			<!--
			    t-attf-checked="#{my_date.profile_visibility == 'public' ? 'checked' : ''}"
                        -->
            
                    </div>
                    
            
            
                    
                </div>
            </div>
            <div class="col-md-1"></div>
            
        </div>
        
    </t>
</template>


</data>
</openerp>
